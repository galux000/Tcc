<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/Bootstrap")
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Uploadify/uploadify.css")" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*Scripts.Render("~/bundles/SystemFunctions")*@ 
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.uploadify.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.uploadify.min.js")"></script>
    <style>
        body {
            padding-top: 60px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">@Html.ActionLink("your logo here", "IndexMusico", "Home")</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "IndexMusico", "Home")</li>
                    <li>@Html.ActionLink("Suas Músicas", "Index", "Music")</li>
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Manage Account", "Manage", "Account")</li>
                        <li>@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>}</li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>

    </div>


    <div class="container">

        @RenderSection("featured", required: false)
        @RenderBody()

    </div>
    <!--Fim container -->

    <div class="footer navbar-fixed-bottom">
        <div class="container">
            <p class="text-muted">@DateTime.Now.Year , by: <a href="https://www.linkedin.com/in/pedrohenrique1">Pedro Henrique</a></p>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $("#isFree").change(function () {
                if ($("#isFree").prop("checked")) {
                    $("#Preco").prop("disabled", "disabled");
                } else {
                    $("#Preco").prop("disabled", "");
                }
            });
        });

        $(function () {
            $('#file_upload').uploadify({
                'swf': "@Url.Content("~/Scripts/uploadify.swf")",
                'cancelImg': "@Url.Content("~/Content/Uploadify/uploadify-cancel.png")",
                'uploader': "@Url.Action("Upload", "Music")",
                'onUploadSuccess': function (file, data, response) {
                    $("#path").val(data);
                    // $("#uploaded").append("<img src='" + data + "' alt='Uploaded Image' />");
                }
            });
        });
    </script>
</body>
</html>
